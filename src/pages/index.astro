---
import AppNav from '../layout/Nav/index.astro';
import Hero from '../components/Hero/index.astro';
import MyApp from '../components/App/index.svelte';
import Features from '../components/Features/index.astro';
import WhatsHolding from '../components/WhatsHolding/index.astro';
import AppFooter from '../layout/Footer/index.astro';
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/x-icon" href="/favicon.ico" />
		<meta name="viewport" content="width=device-width" />

		<!-- OG -->
		<meta property="og:type" content="website" />
		<meta property="og:title" content="Forms Deck - Effortless way to forms" />
		<meta
			property="og:description"
			content="Effortlessly integrate your forms with Discord, a simple, serverless solution for adding forms in your website."
		/>
		<meta
			property="og:image"
			content="https://formsdeck.com/public-assets/forms deck social media.jpg"
		/>
		<meta property="og:image:alt" content="Forms Deck Logo" />
		<meta property="og:image:type" content="image/jpeg" />
		<meta property="og:image:width" content="1000" />
		<meta property="og:image:height" content="650" />
		<meta property="og:locale" content="en_US" />
		<meta property="og:site_name" content="Forms Deck" />
		<title>Forms Deck - Effortless way to forms</title>
		<meta name="robots" content="index,follow" />
		<meta name="googlebot" content="index,follow" />
		<meta
			name="description"
			content="Effortlessly integrate your forms with Discord, a simple, serverless solution for adding forms in your website."
		/>
		<meta property="og:url" content="https://formsdeck.com" />

		<!-- Twitter -->
		<meta name="twitter:card" content="summary_large_image" />
		<meta name="twitter:site" content="@formsdeck" />
		<meta name="twitter:creator" content="@syedbasim" />
		<link rel="canonical" href="https://formsdeck.com" />
		<meta name="color-scheme" content="dark" />

    <link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;700;800;900&display=swap" rel="stylesheet">

    <link rel="stylesheet" href={Astro.resolve('../styles/global.scss')} />
	</head>

	<body>
		<AppNav />
		<Hero />
		<MyApp client:load />
		<main>
			<Features />
			<WhatsHolding />
		</main>
		<AppFooter />
	</body>
</html>
